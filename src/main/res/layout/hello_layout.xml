<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/main_background"
        >
    <TextView
            android:id="@+id/text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_normal"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:height="40dp" android:textColor="@color/text_color" android:gravity="center" android:textSize="20dp"
            android:shadowColor="@color/title_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:textSize="60dp"
                  android:gravity="center"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="30dp"
                  android:textColor="@color/font_color"
                  android:id="@+id/main_text"
                />

        <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/ok_button"
                android:text="@string/app_name"
                android:gravity="center"
                android:background="@drawable/button_background_selector"
                android:layout_marginBottom="20dp"
                android:textColor="@drawable/button_color_selector"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>